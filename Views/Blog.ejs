    <script>
      $(document).ready(function () {
        $(".filter-item").click(function () {
          const filterValue = $(this).attr("data-filter").toLowerCase();

          // Add the 'active-filter' class to the clicked item and remove it from siblings
          $(this)
            .addClass("active-filter")
            .siblings()
            .removeClass("active-filter");

          // Show or hide posts based on the selected category
          if (filterValue === "all") {
            $(".post-box").show("1000");
          } else {
            $(".post-box").hide("1000");
            $(`.post-box.${filterValue}`).show("1000");
          }
        });
      });
