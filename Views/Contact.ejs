<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TRAVEL CITY</title>
    <link rel="stylesheet" href="/Public/Style/contact.css" />
    <link rel="shortcut icon" type="image/png" href="/Public/Image/icon.png" />
  </head>
  <body>
    <section class="contact">
      <div class="contact-form">
        <h1>Contact <span>Us</span></h1>
        <form id="contactForm">
          <input type="text" placeholder="Your Name" id="name" />
          <input type="email" name="email" id="email" placeholder="E-mail" />
          <input type="text" placeholder="Phone" id="phone" />
          <textarea cols="30" rows="10" placeholder="Your Message" id="content">
          </textarea>
          <input
            type="submit"
            id="submitBtn"
            name="submit"
            value="Submit"
            class="btn"
          />
          <!-- <button id="submit">Gá»­i</button> -->
        </form>
      </div>
      <div class="contact-img">
        <img src="https://img.lovepik.com//photo/40020/3644.jpg_860.jpg" />
      </div>
    </section>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const name = document.getElementById("name");
        const email = document.getElementById("email");
        const phone = document.getElementById("phone");
        const content = document.getElementById("content");
        const submitBtn = document.getElementById("submitBtn");
        submitBtn.addEventListener("click", (e) => {
          e.preventDefault();
          const data = {
            nameData: name.value,
            emailData: email.value,
            phoneData: phone.value,
            contentData: content.value,
          };
          if (data.nameData && data.emailData && data.phoneData) {
            alert("Submitted successfully !");
            postGoogle(data);
          } else {
            alert("Submitted Error !");
          }
        });
        async function postGoogle(data) {
          const formURL =
            "https://docs.google.com/forms/d/e/1FAIpQLSfd4DCxJYTz9-NuM4VdC3qKP9fsFtPG4PYQBsWfdGKOTWa13Q/formResponse";
          const postName = "entry.405917932";
          const postEmail = "entry.729948450";
          const postPhone = "entry.1479048733";
          const postContent = "entry.1586953589";
          const formData = new FormData();
          formData.append(postName, data.nameData);
          formData.append(postEmail, data.emailData);
          formData.append(postPhone, data.phoneData);
          formData.append(postContent, data.contentData);
          try {
            await fetch(formURL, {
              method: "POST",
              body: formData,
            });
          } catch {
            console.log("Error");
          }
        }
      });
    </script>
  </body>
</html>
