<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Smart City Travel</title>
    <link rel="stylesheet" href="/Public/Style/register.css" />
    <link rel="shortcut icon" type="image/png" href="/Public/Image/icon.png" />
  </head>
  <body>
    <div class="signup">
      <div class="signup__container">
        <h1>Register</h1>
        <form id="registrationForm">
          <h5>Username</h5>
          <input type="text" class="input-signup-username" id="usernameInput" />
          <h5>Password</h5>
          <input type="password" class="input-signup-password" id="passwordInput" />
          <br />
          <button type="button" class="signup__signInButton" onclick="registerUser()">Register</button>
        </form>
        <a href="/" class="signup__registerButton">Back to Login</a>
      </div>
    </div>
    
  </body>
</html>
    <script>
      function registerUser() {
        // lấy value từ form
        const username = document.getElementById("usernameInput").value;
        const password = document.getElementById("passwordInput").value;

        // Gửi yêu cầu POST tới máy chủ để đăng ký người dùng
        fetch("/api/account/register", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ username, password }),
        })
          .then((response) => response.json())
          .then((data) => {
            // xử lý phản hồi từ server
            alert(data);
             // Xóa dữ liệu trong ô input sau khi đăng ký thành công
            document.getElementById("usernameInput").value = "";
            document.getElementById("passwordInput").value = "";
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
  </body>
</html>
